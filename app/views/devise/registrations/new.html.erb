<div id="contact" class="big-bg">
  <div class="wrapper">
    <h2 class="page-title">Sign up</h2>
    <form>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-xs-3' %>
          </div><br>

          <div class="field form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control col-xs-1' %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control col-xs-2' %>
          </div>
        </div><!-- /.row -->
        <div class="actions">
          <button type="button" name="button" class="btn btn-default"><%= f.submit "Sign up" %></button>
        </div><!-- /.actions -->
      <% end %>

      <%= render "devise/shared/links" %>

    </form>
  </div><!-- /.wrapper -->
</div><!-- /#contact -->
